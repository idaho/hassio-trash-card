{
  "name": "trash-card",
  "version": "2.2.3",
  "description": "TrashCard - indicates what type of trash will be picked up next based on your calendar entries üóëÔ∏è",
  "keywords": [
    "paper",
    "card",
    "trash",
    "waste",
    "home-assistant",
    "hacs",
    "mushroom",
    "lovelace",
    "lovelace-custom-card",
    "hassio",
    "frontend",
    "calendar"
  ],
  "private": true,
  "main": "dist/trashcard.js",
  "scripts": {
    "prestart": "cd node_modules/lovelace-mushroom && npm run build && cp ./dist/mushroom.js ../../.hass_dev/www",
    "start": "rollup -c --watch --bundleConfigAsCjs",
    "build": "rollup -c --bundleConfigAsCjs",
    "clean": "npx rimraf ./dist",
    "qa": "npm run lint && npm run test",
    "lint": "npx eslint ./src --color",
    "test": "npx jest",
    "start:hass": "docker run --rm -p8123:8123 -v ${PWD}/.hass_dev:/config homeassistant/home-assistant:beta",
    "start:hass-cmd": "docker run --rm -p8123:8123 -v  %cd%/.hass_dev:/config homeassistant/home-assistant:beta"
  },
  "author": "Florian Triebel",
  "repository": {
    "type": "git",
    "url": "https://github.com/idaho/hassio-trash-card"
  },
  "license": "ISC",
